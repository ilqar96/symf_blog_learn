{% extends 'admin/index.html.twig' %}

{% block title %}Post index{% endblock %}


{% block stylesheets %}
    <!-- Custom styles for this page -->
    <link href="{{ asset('admin/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">


    <link href="{{ asset('admin/css/sweetalert2.min.css') }}" rel="stylesheet">

{% endblock %}


{% block body %}
    <div class="d-flex justify-content-between mb-2">
        <h1>Post index</h1>

        <a class="btn btn-primary" style="height: 40px" href="{{ path('post_new') }}">Create new <i class="fas fa-plus"></i></a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
            </tfoot>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.slug }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('post_show', {'id': post.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-secondary" href="{{ path('post_edit', {'id': post.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}



{% block javascripts %}

<!-- Page level plugins -->
<script src="{{ asset('admin/vendor/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('admin/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

<!-- Page level custom scripts -->
<script src="{{ asset('admin/js/demo/datatables-demo.js') }}"></script>

<script src="{{ asset('admin/js/sweetalert2.min.js') }}"></script>

{% endblock %}
