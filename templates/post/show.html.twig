{% extends 'admin/index.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">

        <img id="actualImg" src="{{ asset('images/'~post.image) }}" alt="" style="width: 300px;" class="d-block mx-auto">
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary w-100" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
