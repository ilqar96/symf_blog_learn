{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

        <div class="col-md-8">

            {% if posts|length %}
                <h1 class="my-4">All Posts
                    {#        <small>All Posts</small>#}
                </h1>

                {% for post in posts %}
                    <!-- Blog Entries Column -->
                    {{ include('inc/post_component.html.twig',{post:post}) }}
                {% endfor %}

            {% else %}
                <h2 class="my-4" >No Posts</h2>
            {% endif %}

        </div>


    {{ include('inc/side_bar.html.twig',{categorys:categorys,tags:tags}) }}


    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
        </li>
    </ul>


{% endblock %}
