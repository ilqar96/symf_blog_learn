{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

        <div class="col-md-8">

            {% if posts|length %}
                <h1 class="my-4">All Posts
                    {#        <small>All Posts</small>#}
                </h1>

                {% for post in posts %}
                    <!-- Blog Entries Column -->
                    {{ include('inc/post_component.html.twig',{post:post}) }}
                {% endfor %}

            {% else %}
                <h2 class="my-4" >No Posts</h2>
            {% endif %}

        </div>


    {{ include('inc/side_bar.html.twig',{categorys:categorys,tags:tags}) }}


    <!-- Pagination -->
    {{ knp_pagination_render(posts) }}



{% endblock %}
